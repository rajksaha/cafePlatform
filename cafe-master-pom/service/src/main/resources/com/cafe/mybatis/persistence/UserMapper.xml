<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cafe.mybatis.persistence.UserMapper">

	<insert id="create" parameterType="UserData" useGeneratedKeys="true" keyProperty="userID" >

		INSERT INTO `user`
		(
		`restaurantID`,
		`level`,
		`name`,
		`username`,
		`password`)
		VALUES
		(
		#{restaurantID},
		#{level},
		#{name},
		#{username},
		#{password}
		);
	</insert>
	
	<update id="update" parameterType="UserData">

		UPDATE `user`
		SET
		`restaurantID` = #{restaurantID},
		`level` = #{level},
		`name` = #{name},
		`username` = #{username},
		`password` = #{password}
		WHERE `userID` = #{userID};

	</update>

	<select id="getUserByID" parameterType="int" resultType="UserData">
		SELECT `userID`,
				`restaurantID`,
				`level`,
				`name`,
				`username`,
				`password`
		FROM `user` WHERE userID = #{userID};
	</select>

	<select id="getUserByUserName" parameterType="string" resultType="UserData">
		SELECT
			u.`userID`,
			u.`restaurantID`,
			u.`level`,
			u.`name`,
			u.`username`,
			u.`password`,
			r.restaurantName
		FROM `user` u
		LEFT JOIN restaurant r ON u.restaurantID = r.restaurantID
		WHERE username = #{username};
	</select>

	<select id="getUserByParam" parameterType="map" resultType="UserData">
		SELECT
			u.`userID`,
			u.`restaurantID`,
			u.`level`,
			u.`name`,
			u.`username`,
			u.`password`,
			r.restaurantName
		FROM `user` u
		JOIN restaurant r ON u.restaurantID = r.restaurantID
		WHERE 1 = 1
		<if test="userID != null">
			AND userID = #{userID}
		</if>
        <if test="offset != null and limit != null and sortColumn != null and sortOrder != null">
            ORDER BY ${sortColumn} ${sortOrder}
            LIMIT #{limit} OFFSET #{offset}
        </if>
	</select>

    <select id="getUserCountByParam" parameterType="map" resultType="int">
        SELECT COUNT(userID)
        FROM user
        WHERE 1 = 1
        <if test="userID != null">
            AND userID = #{userID}
        </if>
    </select>

	<select id="getDuplicateCount" parameterType="map" resultType="int">
		SELECT COUNT(userID)
		FROM user
		WHERE 1 = 1
		<if test="userName != null">
			AND LOWER(userName) = LOWER(#{userName})
		</if>
		<if test="userID > 0">
			AND userID != #{userID}
		</if>
	</select>




</mapper>